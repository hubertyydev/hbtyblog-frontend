{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-typescript/base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "ignorePatterns": ["*.js", "**/.*/*.ts", "**/build/*.ts"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "tsconfigRootDir": ["./tsconfig.json", "**/tsconfig.json"]
  },
  "plugins": ["import", "@typescript-eslint", "promise"],
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "one-var": ["error", { "initialized": "never", "uninitialized": "never" }]
  }
}
